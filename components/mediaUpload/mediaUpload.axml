<import-sjs from="./utils.sjs" name="utils" />

<form-item
  className="{{className}}"
  position="{{position}}"
  label="{{label}}"
  status="{{formData.status}}"
  errors="{{formData.errors}}"
  tooltip="{{tooltip}}"
  required="{{required}}"
  requiredMark="{{requiredMark}}"
  validateStatus="{{validateStatus}}"
  help="{{help}}"
  labelWidth="{{labelWidth}}"
  message="{{message}}" 
  >
    <view class="mediaUpload">
      <view
        class="mediaUpload-wrapper" 
        a:for="{{ formData.value }}" 
        a:key="*this"
      >
        <icon type="CloseCircleOutline" data-index="{{index}}" className="mediaUpload-close" onTap="removeFile" />
        <view a:if="{{item===''}}" class="mediaUpload-cover-loading">
          <loading color="#2c6ee5" class="mediaUpload-loading"/>
          <view class="mediaUpload-loading-text">
            上传中...
          </view>
        </view>
        <view a:else>
          <video 
            a:if="{{utils.isVideo(item)}}"
            class="mediaUpload-video" 
            src="{{'http://172.19.3.40:8093'+item}}"
            enableNative="{{true}}"
            objectFit="contain"
          ></video>
          <image 
            a:else
            class="mediaUpload-image" 
            mode="aspectFit"
            data-url="{{item}}"
            src="{{'http://172.19.3.40:8093'+item}}"
            onTap="handlePreview"
          ></image>
        </view>
        
      </view>

      <view 
        a:if="{{(formData.value.length < (count||1) ||!formData.value)&&!disabled }}" 
        class="mediaUpload-add" 
        onTap="mediaUpload"
      >
        <icon type="AddOutline" className="mediaUpload-add" />
      </view>
    </view>

    <action-sheet
      title="请选择你要进行的操作"
      visible="{{visible}}"
      actions="{{actions}}"
      onAction="handleAction"
      onClose="handleCloseBasic"
    ></action-sheet>
    <text class="mediaUpload-tip">{{tip}}</text> 
</form-item>
